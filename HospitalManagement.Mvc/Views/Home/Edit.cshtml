@model EditViewModel

<div class="page-header">
    <a asp-action="Index" class="btn btn-lg btn-dark"><i class="fa-solid fa-home"></i> Back to Home</a>
    <h1>Edit Hospital</h1>
</div>

<hr />

<div class="edit-card">
    <form asp-action="Save" asp-controller="Home" method="post">
        <input asp-for="Hospital.HospitalId" type="hidden" />

    <div class="d-flex flex-row align-items-center mb-3">
        <div class="form-floating w-100">
            <input asp-for="Hospital.Name" class="form-control form-control-lg" placeholder="Name" />
            <label asp-for="Hospital.Name">Name</label>
            <span asp-validation-for="Hospital.Name"></span>
        </div>

        <div class="edit-columns">
            <div class="edit-main-column">
                <textarea asp-for="Hospital.Description" class="form-control" placeholder="Description"></textarea>
@* 
                <div class="form-floating mb-3">
                    <select id="tags" class="form-select" placeholder="Select groups" multiple></select>
                </div>

                <div class="form-floating mb-3">
                    <select id="services" class="form-select"></select>
                </div> *@
            </div>

            <div class="vr"></div>

            <div class="edit-public-info-column">
                <div class="form-floating mb-3">
                    <input id="phone-number" asp-for="Hospital.PhoneNumber" type="tel" class="form-control" placeholder="Phone number" />
                    <label asp-for="Hospital.PhoneNumber">Phone Number</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Hospital.EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                    <label asp-for="Hospital.EmailAddress">Email Address</label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Hospital.URL" type="url" class="form-control" placeholder="Website" />
                    <label asp-for="Hospital.URL">Website</label>
                </div>
            </div>
        </div>

        <hr />
        <div class="edit-action-area">
            <button class="btn btn-dark btn-lg" type="submit">Submit</button>
            <button asp-action="Delete" asp-controller="Home" name="hospitalId" value="@Model.Hospital.HospitalId" class="btn btn-outline-danger btn-lg" type="submit">
                <i class="fa-solid fa-trash"></i> Delete
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
